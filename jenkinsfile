                    //sh 'terraform apply -auto-approve'
                    } //with credentials
            ansiblePlaybook credentialsId: 'DevOps321', installation: 'ansibletool', inventory: 'redis_inv', playbook: 'redis.yml'
                } //redis steps
            } //redis stage
        } //stages
